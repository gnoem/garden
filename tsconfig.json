{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "target": "es2017",
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],

      "@components": ["components"],
      "@components/*": ["components/*"],

      "@config": ["config"],
      "@config/*": ["config/*"],
      
      "@contexts": ["contexts"],
      "@contexts/*": ["contexts/*"],
      
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      
      "@layouts": ["layouts"],
      "@layouts/*": ["layouts/*"],
      
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      
      "@models": ["models"],
      "@models/*": ["models/*"],
      
      "@styles": ["styles"],
      "@styles/*": ["styles/*"],
      
      "@themes": ["themes"],
      "@themes/*": ["themes/*"],
      
      "@types": ["types"],
      "@types/*": ["types/*"],
      
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["src", "src/*", "global", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/*", "public/*"]
}